<div class="container-target">
  <div class="backcard">
    <h1>My Target</h1>
    <h4>My Co2 target <%= @co2_weighted %></h4>

    <div class="targetchart">
      <canvas id="pChart"></canvas>
    </div>
    <div class="actionbtncont">
      <h4>My actions</h4>
      <% link_to ideas_path %><%= image_tag "plus-circle-fill.png" %>
    </div>
<div style="display: none;" class="new_result" data-result="<%=@new_results%>"></div>
    <div class="saved_ideas">

    <% @favourites.each do |favourite| %>
      <div class="card-idea">
        <%= image_tag favourite.idea.photo %>
          <div class="card-idea-infos">
            <h2><%= favourite.idea.title %></h2>
            <p><%= favourite.idea.content %></p>
            <p>impact: <%= favourite.idea.impact * 100  %>%</p>
          </div>
      </div>
    <% end %>

  </div>
</div>
