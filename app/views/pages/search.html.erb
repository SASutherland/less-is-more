<div class="results-container">
  <div class="results-card x-center">
    <div>
      <h2>My Tribe</h2>
    </div>
    <%= render "shared/searchbar" %>
    <div class="mt-3">
      <% @ideas.each do |idea| %>
        <%= link_to chatroom_path(Chatroom.find_by(idea_id: idea.id).id) do %>
          <div class="card-idea mb-3">
              <%= image_tag idea.photo %>
              <div class="card-idea-infos">
                <h2><%= idea.title %></h2>
                <p><%= idea.content %></p>
              </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <div class="button-container">
    <a class="mask" href="search">About</a>
    <%= link_to ' <button type="button" name="Hover" >About</button>'.html_safe, about_path %>
  </div>
</div>
